<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OpenUtau.App.ViewModels"
        xmlns:c="using:OpenUtau.Controls"
        Title="Project Settings"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        x:Class="OpenUtau.App.Views.ProjectSettingsDialog">
  <StackPanel Margin="10" Spacing="10">
    <TextBlock Text="Equal Temperament (Divisions per octave)"/>
    <c:IntEditor Value="{Binding EqualTemperament}"/>
    <TextBlock Text="Concert Pitch (Hz)"/>
    <c:FloatEditor Value="{Binding ConcertPitch}"/>
    <TextBlock Text="Concert Pitch Note Number"/>
    <c:IntEditor Value="{Binding ConcertPitchNote}"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
      <Button Content="OK" Click="OkClicked"/>
      <Button Content="Cancel" Click="CancelClicked"/>
    </StackPanel>
  </StackPanel>
</Window>
